pipeline {
    agent any

    environment {
        ANSIBLE_HOME = '/usr/bin/ansible'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your_username/oracle_migration.git'
            }
        }

        stage('Export Database') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbooks/migrate_db.yml',
                    inventory: 'inventory/hosts',
                    tags: 'export_db',
                    credentialsId: 'ssh-credentials-id'
                )
            }
        }

        stage('Import Database') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbooks/migrate_db.yml',
                    inventory: 'inventory/hosts',
                    tags: 'import_db',
                    credentialsId: 'ssh-credentials-id'
                )
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/export_*.log, **/import_*.log', allowEmptyArchive: true
        }
    }
}
